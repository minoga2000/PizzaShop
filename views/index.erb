<h2>Welcome to Pizza Shop! </h2>

<div class="row">

	<% @products.each do |p| %>
	<div class="col-md-3">
		<div>
		<%= p.title %>
		</div>

		<div>
		<img width=200 height=150 src="<%= p.path_to_image %> "/>
		</div>

		<div>
		<%= p.description %>
		</div>

		<div>
		Size: <%= p.size %> cm
		</div>

		<div>
		Price: <%= p.price %> rub
		</div>

	</div>
	<% end %>

</div>
<br>
<br>
<button class="btn btn-primary btn-large" onclick="something()">Click me!</button>

